[user]
	name = Bruno Sienkiewicz
	email = your-email@example.com  # Update with your email

[core]
	editor = nvim
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	side-by-side = true
	line-numbers = true
	syntax-theme = Catppuccin-mocha

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[alias]
	# Short aliases
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	
	# Logging
	ll = log --oneline
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	
	# Stashing
	stash-all = stash save --include-untracked
	
	# Diffing
	df = diff
	dc = diff --cached
	
	# Branch management
	branch-name = rev-parse --abbrev-ref HEAD
	delete-merged = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
	
	# Cleanup
	cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|main\\|develop' | xargs -n 1 git branch -d"

[pull]
	rebase = false

[init]
	defaultBranch = main

[push]
	default = simple
	followTags = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red
